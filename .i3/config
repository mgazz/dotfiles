exec --no-startup-id i3-msg 'workspace $term; exec /usr/bin/urxvt -e /bin/bash -l -c "tmux"'
#exec /bin/bash -l -c "xrdb -load .Xresources"
exec_always --no-startup-id " xrandr --output HDMI-1 --auto --above eDP-1 "
exec --no-startup-id dropbox start
exec --no-startup-id nm-applet

