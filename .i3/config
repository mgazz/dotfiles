# finds out, if available)
#
bar {
    #status_command i3blocks -c /home/mgazz/.config/i3/i3blocks.conf
    #status_command i3status
     status_command i3status --config ~/.i3/status.conf
    #
    font pango:GohuFont 13

	colors {
		background $bg-color
	    separator $inactive-fg-color
        #statusline $urgent-bg-color
        statusline #d2ee61
        #
        #
		#                  border             background         text
		focused_workspace  $bg-color          $active-bg-color   $active-fg-color
		inactive_workspace $inactive-bg-color $inactive-bg-color $inactive-text-color
		urgent_workspace   $urgent-bg-color   $urgent-bg-color   $text-color
	}
}




