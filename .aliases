	fg_color_map[red]=31
	fg_color_map[green]=32
	fg_color_map[yellow]=33
	fg_color_map[blue]=34
	fg_color_map[magenta]=35
	fg_color_map[cyan]=36
	 
	fg_c=$(echo -e "\e[1;${fg_color_map[$1]}m")
	c_rs=$'\e[0m'
	sed -u s"/$2/$fg_c\0$c_rs/g"
}


badass_line() {
	#!/bin/bash
	# Original: http://frexx.de/xterm-256-notes/
	#           http://frexx.de/xterm-256-notes/data/colortable16.sh
	# Modified by Aaron Griffin
	# and further by Kazuo Teramoto
	FGNAMES=('â— â—' 'â— â—' 'â— â—' 'â— â—' 'â— â—' 'â— â—' 'â— â—' 'â— â—')
	#FGNAMES=('âš“ âš“' 'âš“ âš“' 'âš“ âš“' 'âš“ âš“' 'âš“ âš“' 'âš“ âš“' 'âš“ âš“' 'âš“ âš“')
	#FGNAMES=('â˜¢ â˜¢' 'â˜¢ â˜¢' 'â˜¢ â˜¢' 'â˜¢ â˜¢' 'â˜¢ â˜¢' 'â˜¢ â˜¢' 'â˜¢ â˜¢' 'â˜¢ â˜¢')
	green="01;38;5;40" #green
	purple="01;38;5;99" #violet
	lblue="01;38;5;123" #light-blue

	#personalized
	for b in $(seq 0 0); do
		if [ "$b" -gt 0 ]; then
			bg=$(($b+39))
		fi
		echo
		for f in $(seq 0 7); do
			if [[ "$f"%3 -eq 0 ]]; then
				echo -en "\033[${bg}m\033["$green"m ${FGNAMES[$f]} " 
				echo -en "\033[${bg}m\033["$green"m ${FGNAMES[$f]} "
			elif [[ "$f"%3 -eq 1 ]]; then
				#statements
				echo -en "\033[${bg}m\033["$purple"m ${FGNAMES[$f]} " 
				echo -en "\033[${bg}m\033["$purple"m ${FGNAMES[$f]} "
			else
				echo -en "\033[${bg}m\033["$lblue"m ${FGNAMES[$f]} " 
				echo -en "\033[${bg}m\033["$lblue"m ${FGNAMES[$f]} "
			fi
		done
		echo -e "\033[0m"  
	echo
	done
}

